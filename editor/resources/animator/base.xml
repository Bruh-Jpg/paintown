<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
	<splitpane id="split">
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="1"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTHWEST"
			/>

	<vbox>
		<gridbagconstraints
				gridx="0"
				gridy="0"
				weightx="1"
				weighty="1"
				gridheight="3"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.NORTHWEST"
				/>

		<panel id="canvas" border="MatteBorder(2,2,2,2,667A63)" layout="GridBagLayout">
			<!--
			<gridbagconstraints
				gridx="0"
				gridy="0"
				weightx="1"
				weighty="1"
				gridheight="3"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.NORTHWEST"
				/>
			-->
		</panel>
		<glue />
		<label id="scale-num" />
		<slider id="scale" minimum="1" maximum="20" />
	</vbox>
	<panel layout="GridBagLayout">
		<scrollpane layout="GridBagLayout">
			<gridbagconstraints
					gridx="1"
					gridy="0"
					insets="1,1,1,1"
					weightx="0.1"
					weighty="0.9"
					gridwidth="1"
					fill="GridBagConstraints.BOTH"
					anchor="GridBagConstraints.NORTH" />

			<panel id="context" border="MatteBorder(2,2,2,2,667A63)">
				<gridbagconstraints
					gridx="0"
					gridy="0"
					insets="1,1,1,1"
					weightx="0.1"
					weighty="0.9"
					gridwidth="1"
					fill="GridBagConstraints.BOTH"
					anchor="GridBagConstraints.NORTH" />
			</panel>
		</scrollpane>
		<panel id="controls" border="MatteBorder(2,2,2,2,667A63)">
			<gridbagconstraints
				gridx="1"
				gridy="1"
				gridheight="10"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.WEST" />
		</panel>
	</panel>
	</splitpane>
</panel>
