<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
    <splitpane id="split">
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
            />
        <panel id="canvas" layout="GridBagLayout">
            <gridbagconstraints
                gridx="0"
                gridy="0"
                weightx="0.7"
                weighty="1"
                gridheight="1"
                anchor="GridBagConstraints.NORTHWEST"
                fill="GridBagConstraints.BOTH"
                />
            <panel>
                <gridbagconstraints
                    gridx="0"
                    gridy="1"
                    weightx="1"
                    weighty="0"
                    gridheight="1"
                    anchor="GridBagConstraints.NORTHWEST"
                    fill="GridBagConstraints.BOTH"
                    />
                <vbox>
                    <hbox>
                        <button id="black-background" text="Black background" />
                        <button id="white-background" text="White background" />
                    </hbox>
                    <hbox>
                        <label id="speed-num" />
                        <glue />
                    </hbox>
                    <hbox>
                        <button id="speed:decrease" icon="animator/minus.png" />
                        <slider id="speed" minimum="1" maximum="50" />
                        <button id="speed:increase" icon="animator/plus.png" />
                    </hbox>
                    <glue size="1" />
                    <hbox>
                        <label id="scale-num" />
                        <glue />
                    </hbox>
                    <hbox>
                        <button id="scale:decrease" icon="animator/minus.png" />
                        <slider id="scale" minimum="1" maximum="20" />
                        <button id="scale:increase" icon="animator/plus.png" />
                    </hbox>
                    <glue size="1" />
                    <hbox>
                        <button id="previous-frame" text="Previous Frame" />
                        <glue size="1" />
                        <button id="play" icon="animator/play.png" />
                        <glue size="1" />
                        <button id="stop" icon="animator/stop.png" />
                        <glue size="1" />
                        <button id="next-frame" text="Next Frame" />
                        <glue />
                    </hbox>
                </vbox>
            </panel>
        </panel>
        <tabbedpane id="tabs">
            <gridbagconstraints
                gridx="1"
                gridy="0"
                weightx="0.3"
                weighty="1"
                gridheight="1"
                anchor="GridBagConstraints.NORTHWEST"
                fill="GridBagConstraints.HORIZONTAL"
                />
        </tabbedpane>
    </splitpane>
</panel>
