<panel layout="GridBagLayout">
	<vbox>
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="1"
			anchor="GridBagConstraints.NORTHWEST"
			fill="GridBagConstraints.HORIZONTAL"
			/>
		<hbox>
			<label text="Min Z plane" />
			<spinner id="min-z" />
			<glue />
		</hbox>
		<hbox>
			<label text="Max Z plane" />
			<spinner id="max-z" />
			<glue />
		</hbox>
		<hbox>
			<label text="Background: " />
			<textfield id="background" />
			<button text="Change" id="change-background" />
		</hbox>
	</vbox>
</panel>
