<panel layout="GridBagLayout">

	<panel id="view" border="MatteBorder(2,2,2,2,667A63)">
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="0.9"
			weighty="1"
			gridheight="3"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTHWEST"
			/>
	</panel>

	<!--
	<scrollpane size="100,30">
		<gridbagconstraints
			gridx="1"
			gridy="0"
			weightx="0.1"
			weighty="0.1"
			gridheight="1"
			fill="GridBagConstraints.HORIZONTAL"
			anchor="GridBagConstraints.NORTHWEST"
			/>
		<list size="10,10" id="files" />
	</scrollpane>
	-->

	<tabbedpane id="tabbed" border="MatteBorder(2,2,2,2,667A63)">
		<gridbagconstraints
			gridx="1"
			gridy="0"
			insets="1,1,1,1"
			weightx="0.1"
			weighty="0.9"
			gridwidth="1"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTH" />
	</tabbedpane>

	<label id="file" text="Filename:">
		<gridbagconstraints
			gridx="1"
			gridy="1"
			weightx="0.1"
			weighty="0.1"
			gridheight="1"
			fill="GridBagConstraints.HORIZONTAL"
			anchor="GridBagConstraints.NORTHWEST"
			/>
	</label>

	<hbox>
		<gridbagconstraints
			gridx="1"
			gridy="2"
			weightx="0.1"
			weighty="0.1"
			gridheight="1"
			fill="GridBagConstraints.HORIZONTAL"
			anchor="GridBagConstraints.NORTHWEST"
			/>
		<button id="render" label="Render" />
	</hbox>
</panel>
