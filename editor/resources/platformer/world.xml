<panel layout="GridBagLayout">
    <vbox>
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
        />
        <hbox>
            <label text="World Name" />
            <textfield id="name" />
        </hbox>
        <hbox>
            <label text="Resolution X" />
            <spinner id="resolution-x" />
            <glue />
        </hbox>
        <hbox>
            <label text="Resolution Y" />
            <spinner id="resolution-y" />
            <glue />
        </hbox>
        <hbox>
            <label text="Dimensions X" />
            <spinner id="dimensions-x" />
            <glue />
        </hbox>
        <hbox>
            <label text="Dimensions Y" />
            <spinner id="dimensions-y" />
            <glue />
        </hbox>
        <vbox>
            <label text="Mechanics" />
            <hbox>
                <label text="Gravity X" />
                <spinner id="gravity-x" />
            </hbox>
            <hbox>
                <label text="Gravity Y" />
                <spinner id="gravity-y" />
            </hbox>
            <hbox>
                <label text="Acceleration" />
                <spinner id="acceleration" />
            </hbox>
        </vbox>
        <vbox>
            <label text="Animations" />
            <hbox>
                <scrollpane>
                    <list id="anims" />
                </scrollpane>
            </hbox>
            <hbox>
                <label text="Add/Remove Animation" />
                <button text="Add" id="add-anim-button" />
                <button text="Edit" id="edit-anim-button" />
                <button text="Remove" id="remove-anim-button" />
            </hbox>
        </vbox>
    </vbox>
</panel>
