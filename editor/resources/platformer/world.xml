<panel layout="GridBagLayout">
    <vbox>
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
        />
        <vbox border="TitledBorder(LineBorder(black,2),World,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <label text="Name: " />
                <textfield id="name" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Dimensions X: " />
                <spinner id="dimensions-x" />
                <label text="   Y: " />
                <spinner id="dimensions-y" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Background fill color: " />
                <button text="Choose" id="fill-color" />
                <panel id="fill-color-display" />
                <label text="Enabled" />
                <checkbox id="enable-fill-color" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Scale: 2.0" id="scale-label" />
                <slider id="scale" minimum="1" maximum="20" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Offset X: " />
                <spinner id="offset-x" />
                <label text="   Y: " />
                <spinner id="offset-y" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Enable Animations: " />
                <checkbox id="enable-animations" />
                <label text="Display FPS: " />
                <checkbox id="display-fps" />
                <glue />
            </hbox>
        </vbox>
        <hbox  MaximumSize="450,450" border="TitledBorder(LineBorder(black,2),Resolution,TitledBorder.CENTER, TitledBorder.TOP)">
            <label text="X: " />
            <spinner id="resolution-x" />
            <label text="   Y: " />
            <spinner id="resolution-y" />
            <glue />
        </hbox>
        <vbox border="TitledBorder(LineBorder(black,2),Mechanics,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <label text="Gravity X: " />
                <spinner id="gravity-x" />
                <label text="   Y: " />
                <spinner id="gravity-y" />
                <glue />
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Acceleration: " />
                <spinner id="acceleration" />
                <glue />
            </hbox>
        </vbox>
        <hbox MaximumSize="450,450" border="TitledBorder(LineBorder(black,2),Overlay,TitledBorder.CENTER, TitledBorder.TOP)">
            <vbox>
                <hbox>
                    <button text="Choose" id="overlay-button" />
                    <slider id="overlay-slider" minimum="0" maximum="50" />
                </hbox>
                <hbox>
                    <label text="     Overlay image that is selected:      " />
                </hbox>
                <hbox>
                    <textfield id="overlay" />
                </hbox>
            </vbox>
        </hbox>
        <vbox border="TitledBorder(LineBorder(black,2),Animations,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <scrollpane MaximumSize="450,350">
                    <list MaximumSize="450,350" id="anims" />
                </scrollpane>
            </hbox>
            <hbox  MaximumSize="450,450">
                <button text="Add" id="add-anim-button" />
                <button text="Edit" id="edit-anim-button" />
                <button text="Copy" id="copy-anim-button" />
                <button text="Current" id="current-anim-button" />
                <button text="Remove" id="remove-anim-button" />
                <glue />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Background Tilesets,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <scrollpane MaximumSize="450,350">
                    <list MaximumSize="450,350" id="backgrounds" />
                </scrollpane>
            </hbox>
            <hbox  MaximumSize="450,450">
                <button text="Add" id="add-bg-button" />
                <button text="Edit" id="edit-bg-button" />
                <button text="Up" id="up-bg-button" />
                <button text="Down" id="down-bg-button" />
                <button text="Current" id="current-bg-button" />
                <button text="Remove" id="remove-bg-button" />
                <glue />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Foreground Tilesets,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <scrollpane MaximumSize="450,350">
                    <list MaximumSize="450,350" id="foregrounds" />
                </scrollpane>
            </hbox>
            <hbox  MaximumSize="450,450">
                <button text="Add" id="add-fg-button" />
                <button text="Edit" id="edit-fg-button" />
                <button text="Up" id="up-fg-button" />
                <button text="Down" id="down-fg-button" />
                <button text="Current" id="current-fg-button" />
                <button text="Remove" id="remove-fg-button" />
                <glue />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Collision Maps,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <scrollpane MaximumSize="450,350">
                    <list MaximumSize="450,350" id="collision-maps" />
                </scrollpane>
            </hbox>
            <hbox  MaximumSize="450,450">
                <button text="Grab Area" id="grab-collision-button" />
                <button text="Add" id="add-collision-button" />
                <button text="Edit" id="edit-collision-button" />
                <button text="Remove" id="remove-collision-button" />
                <glue />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Script Objects,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <scrollpane MaximumSize="450,350">
                    <list MaximumSize="450,350" id="script-objects" />
                </scrollpane>
            </hbox>
            <hbox  MaximumSize="450,450">
                <button text="Add" id="add-script-object-button" />
                <button text="Edit" id="edit-script-object-button" />
                <button text="Copy" id="copy-script-object-button" />
                <button text="Copy To" id="copy-script-object-to-button" />
                <button text="Remove" id="remove-script-object-button" />
                <glue />
            </hbox>
        </vbox>
    </vbox>
</panel>
