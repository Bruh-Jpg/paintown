<?xml version="1.0" ?>

<dialog Size="500,500" resizable="false" title="Animation Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>
    <panel layout="GridBagLayout">
        <vbox>
            <hbox>
                <label text="Name" />
                <textfield bindWith="Name" id="name" />
                <glue />
            </hbox>
            <hbox>
                <label text="Base Directory" />
                <textfield id="basedir" />
                <button text="Choose" id="basedir-button" />
                <glue />
            </hbox>
            <vbox>
                <label text="Images" />
                <hbox>
                    <scrollpane minimumSize="150,150">
                        <list id="images" />
                    </scrollpane>
                </hbox>
                <hbox>
                    <label text="Image Options" />
                    <button text="Add" id="add-image-button" />
                    <button text="Remove" id="remove-image-button" />
                </hbox>
            </vbox>
            <vbox>
                <label text="Frames" />
                <hbox>
                    <scrollpane minimumSize="150,150">
                        <list id="frames" />
                    </scrollpane>
                </hbox>
                <hbox>
                    <label text="Frame Options" />
                    <button text="Add" id="add-frame-button" />
                    <button text="Edit" id="edit-frame-button" />
                    <button text="Remove" id="remove-frame-button" />
                </hbox>
            </vbox>
            <hbox>
                <label text="Loop" />
                <spinner bindWith="Loop" id="loop" />
                <glue />
            </hbox>
        </vbox>
    </panel>

    <hbox>
        <button text="Close" id="close"/>
    </hbox>
    
</vbox>

</dialog>
