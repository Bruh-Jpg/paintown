<?xml version="1.0" ?>

<dialog Size="500,500" resizable="false" title="Animation Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>

    <panel layout="GridLayout(5,3)" border="CompoundBorder(EmptyBorder(10,1,10,10), TitledBorder(Edit Animation))">
        <label text="Name" />
        <textfield bindWith="Name" id="name" />
        <label text="Base Directory" />
        <passwordField bindWith="Base Directory" id="basedir" />
        <label text="Images" />
        <combobox bindwith="Images" id="images" />
        <label text="Frames" />
        <combobox bindwith="Frames" id="frames" />
        <label text="Loop" />
        <spinner bindWith="Loop" id="loop" />
    </panel>

    <hbox>
        <button text="Save" action="save"/>
        <button text="Cancel" action="cancel"/>
    </hbox>
    
</vbox>

</dialog>