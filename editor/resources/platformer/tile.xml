<?xml version="1.0" ?>

<dialog Size="500,500" resizable="false" title="Tile Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>
    <panel layout="GridBagLayout">
        <vbox>
            <vbox>
                <label text="Animation" />
                <hbox>
                    <scrollpane minimumSize="250,250" maximumSize="250,250" id="animation-view" />
                </hbox>
                <hbox>
                    <combobox id="animation" />
                    <glue />
                </hbox>
            </vbox>
            <hbox>
                <label text="Row" />
                <spinner id="row" />
                <glue />
            </hbox>
            <hbox>
                <label text="Column" />
                <spinner id="column" />
                <glue />
            </hbox>
        </vbox>
    </panel>

    <hbox>
        <button text="Close" id="close"/>
    </hbox>
    
</vbox>

</dialog>
